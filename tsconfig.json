{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDirs": [
      "src",
      "test"
    ],
    "importHelpers": true,
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "node_modules/zotero-types"
  ]
}
